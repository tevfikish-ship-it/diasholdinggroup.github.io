  <script>
    // YÄ±l GÃ¼ncelle
    document.getElementById("year").textContent = new Date().getFullYear();

    // Dil DeÄŸiÅŸimi
    const aboutTitle = document.getElementById("about-title");
    const aboutText = document.getElementById("about-text");

    const translations = {
      tr: {
        title: "HakkÄ±mÄ±zda",
        text: "Dias Holding Group, global pazarda sÃ¼rdÃ¼rÃ¼lebilirlik, yenilikÃ§ilik ve gÃ¼ven ilkeleriyle faaliyet gÃ¶stermektedir. Ä°nÅŸaat, savunma sanayi ve gÄ±da sektÃ¶rlerinde yÃ¼ksek standartlarda projeler geliÅŸtirerek, hem Avustralya hem de uluslararasÄ± alanda gÃ¼Ã§lÃ¼ bir konum edinmiÅŸtir."
      },
      en: {
        title: "About Us",
        text: "Dias Holding Group operates in the global market with the principles of sustainability, innovation, and reliability. The company develops high-standard projects in the construction, defense industry, and food sectors, establishing a strong presence both in Australia and internationally."
      }
    };

    function setLang(lang) {
      aboutTitle.textContent = translations[lang].title;
      aboutText.textContent = translations[lang].text;
    }

    // Scroll efektleri
    const sections = document.querySelectorAll("section");
    const observer = new IntersectionObserver(entries => {
      entries.forEach(entry => {
        if (entry.isIntersecting) entry.target.classList.add("visible");
      });
    }, { threshold: 0.2 });
    sections.forEach(section => observer.observe(section));

    // YukarÄ± Ã§Ä±k butonu
    const scrollBtn = document.getElementById("scrollTopBtn");
    window.onscroll = () => {
      if (document.body.scrollTop > 200 || document.documentElement.scrollTop > 200) {
        scrollBtn.style.display = "block";
      } else {
        scrollBtn.style.display = "none";
      }
    };
    scrollBtn.onclick = () => window.scrollTo({ top: 0, behavior: "smooth" });
  </script>
